.cover-input {
    position: fixed;
    width: 80%;
    height: 200px;
    line-height: 32px;
    border-radius: 5px;
    background-color: #fff;
    left: 50%;
    transform: translateX(-50%);
    padding: 20px;
    border: 1px solid red;
}

.text {
    height: 32px;
    line-height: 32px;
    border: 1px solid red;
}

.input {
    box-sizing: border-box;
    height: 32px;
    line-height: 32px;
    /* margin-top为text的高度，保持视觉上一致 */
    margin-top: -32px;
}
.page-input{
    height: 50px;
    line-height: 50px;
    border: 1px solid red;
}